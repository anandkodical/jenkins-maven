pipeline {
agent any 

tools {
maven 'maven'
}

stages {



stage ('compilation of code') {
steps {
sh "mvn compile"
}
}

stage ('test') {
steps {
sh "mvn test"
}
}

stage ('package'){
    steps {
        sh "mvn package"
    }
stage("shell script"){
steps{
script{
'''#!/bin/bash
echo "Hello world"
'''
    }
  }

}
}
}

pipeline {
agent any 

tools {
maven 'maven'
}

stages {



stage ('compilation of code') {
steps {
sh "mvn compile"
}
}

stage ('test') {
steps {
sh "mvn test"
}
}
stage("shell sript"){
 steps{
  script{
 '''#!/bin/bash
 echo "hello world"
 '''
}
}
}
stage ('package'){
    steps {
        sh "mvn package"
    }
}
}
}

